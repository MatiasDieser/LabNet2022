@model List<Lab.TP7.MVC.Models.CategoriesView>
@{
    ViewBag.Title = "Categories Page";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/PersonalizedCss/HomeStyle.css" />
</header>
<h1>Categories</h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach (var categories in Model)
     {
        <thead>
            <tr>
                <td>@categories.Id</td>
                <td>@categories.Name</td>
                <td>@categories.Description</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = categories.Id })</td>
                <td>@Html.ActionLink("Modificar", "Update", new { id = categories.Id })</td>
            </tr>
        </thead>
     }


</table>
<br>
<div>@Html.ActionLink("Agregar categoría", "Insert", "Categories")</div>

