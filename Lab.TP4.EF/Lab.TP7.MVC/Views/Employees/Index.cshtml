@model List<Lab.TP7.MVC.Models.EmployeesView>
@{
    ViewBag.Title = "Employees Page";
}
<header>
    <link rel="stylesheet" type="text/css" href="~/PersonalizedCss/HomeStyle.css" />
</header>
<h1>Empleados</h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Título</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach (var empleado in Model)
    {
        <thead>
            <tr>
                <td>@empleado.Id</td>
                <td>@empleado.FirstName</td>
                <td>@empleado.LastName</td>
                <td>@empleado.Title</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = empleado.Id })</td>
                <td>@Html.ActionLink("Modificar", "Update", new { id = empleado.Id })</td>
            </tr>
        </thead>
     }


    </table><br>
<div>@Html.ActionLink("Agregar empleado", "Insert", "Employees")</div>
